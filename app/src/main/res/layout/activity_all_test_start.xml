<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllTestStart"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#37B2D5">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhui"
            android:id="@+id/fanhui_bt"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:maxWidth="20dp"
            android:maxHeight="20dp"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="瑞文智力测试(SPM)"
            android:layout_toRightOf="@+id/fanhui_bt"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#dcf2fa"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:id="@+id/x1"
            android:background="#000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试须知"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/x1"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/x2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="32dp"
            android:background="#000" />
        <TextView
            android:id="@+id/p0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:lineSpacingExtra="5dp"
            android:text="@string/spm_start"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:id="@+id/x3"
            android:background="#000"
            android:layout_below="@+id/x2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="140dp"/>
        <TextView
            android:id="@+id/p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/x3"
            android:layout_marginTop="-15dp"
            android:textStyle="bold"
            android:lineSpacingExtra="5dp"
            android:text="@string/spm_start_1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/test_start"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/p1"
            android:layout_marginTop="45dp"
            android:background="@drawable/denglu_ceshi"
            android:text="开始测试"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/question_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spm_start_tip"
            android:layout_below="@+id/test_start"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>
</LinearLayout>